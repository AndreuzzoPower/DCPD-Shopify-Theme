{%- liquid
  assign sw = section.settings.section_width | default: 'page_width'
  if sw == 'default'
    assign sw = 'page_width'
  endif
  case sw
    when 'narrow'
      assign sw_bs_class = 'container'
    when 'page_fluid'
      assign sw_bs_class = 'container-fluid'
    when 'full_width'
      assign sw_bs_class = ''
    else
      assign sw_bs_class = 'container'
  endcase
-%}
<div class="ms_multiblock bootstrap-scope color-{{ block.settings.color_scheme }}" id="section-{{ section.id }}">
  <div class="{{ sw_bs_class }}">
    <div
      class="group-block row"
    >
      {% content_for 'blocks' %}
    </div>
  </div>
</div>

{%- render 'ms_section-style' -%}

<style>
  #shopify-section-{{ section.id }} {
    padding-top: {{ section.settings.section_padding_top }}px;
    padding-bottom: {{ section.settings.section_padding_bottom }}px;
    margin-top: {{ section.settings.section_margin_top }}px;
    margin-bottom: {{ section.settings.section_margin_bottom }}px;
  }
  @media all and (min-width: 768px) and (max-width: 991px) {
    #shopify-section-{{ section.id }} {
      padding-top: {{ section.settings.section_padding_top_md }}px;
      padding-bottom: {{ section.settings.section_padding_bottom_md }}px;
      margin-top: {{ section.settings.section_margin_top_md }}px;
      margin-bottom: {{ section.settings.section_margin_bottom_md }}px;
    }
  }
  @media all and (max-width: 767px) {
    #shopify-section-{{ section.id }} {
      padding-top: {{ section.settings.section_padding_top_xs }}px;
      padding-bottom: {{ section.settings.section_padding_bottom_xs }}px;
      margin-top: {{ section.settings.section_margin_top_xs }}px;
      margin-bottom: {{ section.settings.section_margin_bottom_xs }}px;
    }
  }
</style>

