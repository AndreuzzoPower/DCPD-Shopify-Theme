<script>
  (function() {
    var container = document.querySelector('.ms-tabs[data-section-id="{{ section.id }}"]');
    if (!container) return;

    var tabBtns = container.querySelectorAll('[role="tab"]');
    var tabPanels = container.querySelectorAll('[role="tabpanel"]');

    tabBtns.forEach(function(btn) {
      btn.addEventListener('click', function() {
        var targetId = this.getAttribute('aria-controls');

        /* Deactivate all */
        tabBtns.forEach(function(b) {
          b.classList.remove('ms-tabs--active');
          b.setAttribute('aria-selected', 'false');
        });
        tabPanels.forEach(function(p) {
          p.classList.remove('ms-tabs__content--active');
        });

        /* Activate target */
        this.classList.add('ms-tabs--active');
        this.setAttribute('aria-selected', 'true');
        var panel = document.getElementById(targetId);
        if (panel) {
          panel.classList.add('ms-tabs__content--active');

          /* Re-layout Isotope dopo cambio tab — identico all'originale jQuery:
             setTimeout(100, $grid.isotope('layout'))
             fitRows ri-misura gli item internamente, quindi funziona anche
             se Isotope era stato inizializzato con il tab nascosto. */
          setTimeout(function() {
            if (window._msEARelayout && window._msEARelayout['{{ section.id }}']) {
              window._msEARelayout['{{ section.id }}']();
            }
          }, 100);
        }
      });

      /* Keyboard navigation: Arrow keys between tabs */
      btn.addEventListener('keydown', function(e) {
        var btnsArr = Array.from(tabBtns);
        var idx = btnsArr.indexOf(this);
        if (e.key === 'ArrowRight' || e.key === 'ArrowDown') {
          e.preventDefault();
          var next = btnsArr[(idx + 1) % btnsArr.length];
          next.focus();
          next.click();
        } else if (e.key === 'ArrowLeft' || e.key === 'ArrowUp') {
          e.preventDefault();
          var prev = btnsArr[(idx - 1 + btnsArr.length) % btnsArr.length];
          prev.focus();
          prev.click();
        }
      });
    });
  })();
</script>
{%- endif -%}

